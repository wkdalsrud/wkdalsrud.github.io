                     <span class="k">continue</span><span class="p">;</span>
                 <span class="k">if</span> <span class="p">(</span><span class="n">found</span><span class="p">[</span><span class="n">nextRow</span><span class="p">][</span><span class="n">nextCol</span><span class="p">]</span> <span class="o">==</span> <span class="nb">true</span><span class="p">)</span> <span class="c1">// 2. ì˜ˆì•½ëœ ì ì´ ì—†ê³ </span>
                     <span class="k">continue</span><span class="p">;</span>
