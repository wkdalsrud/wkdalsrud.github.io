                     <span class="k">continue</span><span class="p">;</span>

                 <span class="n">q</span><span class="p">.</span><span class="n">push</span><span class="p">(</span><span class="n">make_pair</span><span class="p">(</span><span class="n">nextRow</span><span class="p">,</span> <span class="n">nextCol</span><span class="p">));</span>
                 <span class="n">found</span><span class="p">[</span><span class="n">nextRow</span><span class="p">][</span><span class="n">nextCol</span><span class="p">]</span> <span class="o">=</span> <span class="nb">true</span><span class="p">;</span>

                 <span class="n">colorCount</span><span class="p">.</span><span class="n">back</span><span class="p">()</span><span class="o">++</span><span class="p">;</span> <span class="c1">// ì§€ê¸ˆ ìˆœíšŒì¤‘ì¸ ì´ ê·¸ë˜í”„ëŠ” colorCountì— ìµœê·¼ì— ë’¤ì— ì¶”ê°€ë˜ì—ˆìœ¼ë‹ˆ ê°€ì¥ ë§ˆì§€ë§‰ ì›ì†Œë‹¤. ì˜ˆì•½í–ˆê³  ê³§ ë°©ë¬¸ ì˜ˆì •ì´ë‹ˆ íƒ€ì¼ ê°œìˆ˜ 1 ë”í•´ì¤Œ.</span>
             <span class="p">}</span>
