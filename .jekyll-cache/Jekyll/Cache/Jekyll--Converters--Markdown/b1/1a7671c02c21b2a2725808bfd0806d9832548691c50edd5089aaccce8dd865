		<span class="p">}</span>

		<span class="o">*</span><span class="n">ptr_n_items</span> <span class="o">+=</span> <span class="mi">1</span><span class="p">;</span>
	<span class="p">}</span>

	<span class="n">assert</span><span class="p">(</span><span class="o">*</span><span class="n">ptr_n_items</span> <span class="o">==</span> <span class="n">num</span><span class="p">);</span>
	
